<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationConditional">
					<xpath>Defs/PawnKindDef[
						contains(defName, 'Accurex')
						and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
						]/apparelRequired/li[text()="CE_Apparel_TribalBackpack"]</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/PawnKindDef[
							contains(defName, 'Accurex')
							and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
							]/apparelRequired</xpath>
						<value>
							<li>CE_Apparel_TribalBackpack</li>
						</value>
					</nomatch>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/PawnKindDef[
						contains(defName, 'Empire')
						and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
						]/apparelRequired/li[text()="CE_Apparel_TribalBackpack"]</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/PawnKindDef[
							contains(defName, 'Empire')
							and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
							]/apparelRequired</xpath>
						<value>
							<li>CE_Apparel_TribalBackpack</li>
						</value>
					</nomatch>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/PawnKindDef[
						contains(defName, 'Empire_Fighter_StellicGuardRanged')
						and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
						]/apparelRequired/li[text()="CE_Apparel_TribalBackpack"]</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/PawnKindDef[
							contains(defName, 'Empire_Fighter_StellicGuardRanged')
							and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
							]</xpath>
						<value>
						<apparelRequired>
							<li>CE_Apparel_TribalBackpack</li>						
						</apparelRequired>
						</value>
					</nomatch>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/PawnKindDef[
						contains(defName, 'Accurex')
						and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
						]/apparelRequired/li[text()="DankPyon_Apparel_Quiver"]</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/PawnKindDef[
							contains(defName, 'Accurex')
							and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
							]/apparelRequired</xpath>
						<value>
							<li>DankPyon_Apparel_Quiver</li>
						</value>
					</nomatch>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/PawnKindDef[
						contains(defName, 'Empire')
						and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
						]/apparelRequired/li[text()="DankPyon_Apparel_Quiver"]</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/PawnKindDef[
							contains(defName, 'Empire')
							and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
							]/apparelRequired</xpath>
						<value>
							<li>DankPyon_Apparel_Quiver</li>
						</value>
					</nomatch>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/PawnKindDef[
						contains(defName, 'Empire_Fighter_StellicGuardRanged')
						and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
						]/apparelRequired/li[text()="DankPyon_Apparel_Quiver"]</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/PawnKindDef[
							contains(defName, 'Empire_Fighter_StellicGuardRanged')
							and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
							]</xpath>
						<value>
						<apparelRequired>
							<li>DankPyon_Apparel_Quiver</li>						
						</apparelRequired>
						</value>
					</nomatch>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/PawnKindDef[
						contains(defName, 'Accurex')
						and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
						]/modExtensions/li[@Class="CombatExtended.LoadoutPropertiesExtension"]</xpath>
					<nomatch Class="PatchOperationAddModExtension">
							<xpath>Defs/PawnKindDef[
								contains(defName, 'Accurex')
								and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
							]</xpath>
							<value>
								<li Class="CombatExtended.LoadoutPropertiesExtension">
									<primaryMagazineCount>
										<min>30</min>
										<max>60</max>
									</primaryMagazineCount>
									<forcedSidearm>
										<sidearmMoney>
											<min>150</min>
											<max>250</max>
										</sidearmMoney>
										<weaponTags>
											<li>NeolithicMeleeBasic</li>
											<li>MedievalMeleeDecent</li>
										</weaponTags>
									</forcedSidearm>
								</li>
							</value>
					</nomatch>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/PawnKindDef[
						contains(defName, 'Empire')
						and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
						]/modExtensions/li[@Class="CombatExtended.LoadoutPropertiesExtension"]</xpath>
					<nomatch Class="PatchOperationAddModExtension">
							<xpath>Defs/PawnKindDef[
								contains(defName, 'Empire')
								and (contains(weaponTags, 'DankPyon_Crossbow') or contains(weaponTags, 'DankPyon_Arbelest'))
							]</xpath>
							<value>
								<li Class="CombatExtended.LoadoutPropertiesExtension">
									<primaryMagazineCount>
										<min>30</min>
										<max>60</max>
									</primaryMagazineCount>
									<forcedSidearm>
										<sidearmMoney>
											<min>150</min>
											<max>250</max>
										</sidearmMoney>
										<weaponTags>
											<li>NeolithicMeleeBasic</li>
											<li>MedievalMeleeDecent</li>
										</weaponTags>
									</forcedSidearm>
								</li>
							</value>
					</nomatch>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/PawnKindDef[defName="Empire_Fighter_StellicGuardRanged"]/modExtensions/li[@Class="CombatExtended.LoadoutPropertiesExtension"]</xpath>
					<nomatch Class="PatchOperationAddModExtension">
							<xpath>Defs/PawnKindDef[defName="Empire_Fighter_StellicGuardRanged"]</xpath>
							<value>
								<li Class="CombatExtended.LoadoutPropertiesExtension">
									<primaryMagazineCount>
										<min>30</min>
										<max>60</max>
									</primaryMagazineCount>
									<forcedSidearm>
										<sidearmMoney>
											<min>150</min>
											<max>250</max>
										</sidearmMoney>
										<weaponTags>
											<li>NeolithicMeleeBasic</li>
											<li>MedievalMeleeDecent</li>
										</weaponTags>
									</forcedSidearm>
								</li>
							</value>
					</nomatch>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/PawnKindDef[contains(apparelRequired, 'DankPyon_Apparel_Trousers') and contains(apparelRequired, 'DankPyon_Apparel_Padded_Surcoat')]/apparelRequired/li[contains(text(), 'DankPyon_Apparel_Trousers')]</xpath>
				</li>	

				<li Class="PatchOperationRemove">
					<xpath>Defs/PawnKindDef[contains(apparelRequired, 'Apparel_Pants') and contains(apparelRequired, 'DankPyon_Apparel_Padded_Surcoat')]/apparelRequired/li[contains(text(), 'Apparel_Pants')]</xpath>
				</li>			
			</operations>
		</match>
	</Operation>	
</Patch>
		